@{
    ViewData["Title"] = "Home Page";
}
@model SicilNumarasi

<html>
<head>
    <title>Index</title>
</head>
<body>
    <div>
        @using (Html.BeginForm())
        {
                <table>
                    <tr>
                        <td style="color:darkblue;font-size:20px;">Sicil Numaranızı Giriniz : </td>
                        <td>@Html.EditorFor(sicil => sicil.SicilNo)</td>
                    </tr>
                    <tr>
                        <td style="color:darkblue;font-size:20px;"> Çalışma Saatinizi Giriniz : </td>
                        <td>@Html.EditorFor(saat => saat.CalismaSaati)</td>
                    </tr>
                     <tr>
                        <td style="color:darkblue;font-size:20px;"> Saatlik Ücretinizi Giriniz : </td>
                        <td>@Html.EditorFor(ucret => ucret.SaatlikUcret)</td>
                    </tr>
                    <tr>
                        <td>
                            <input type="submit" value="Maaş Hesapla" />
                        </td>
                    </tr>
                    <tr>
                        <td>@ViewBag.Message</td>
                    </tr>
                </table>
        }
    </div>
</body>
</html>